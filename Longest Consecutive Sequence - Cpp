'''
class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        
        set <int> s;
        
        int longeststreak=0;
        for(int num:nums)
        {
            s.insert(num);
        }
        
        for(int num:nums){
            
            if(!s.count(num-1)){
                int currentnum = num;
                int currentstreak = 1;
                
                while(s.count(currentnum+1))
                {
                    currentnum+=1;
                    currentstreak+=1;
                }
                
                longeststreak = max(longeststreak, currentstreak);
            }
        }
        
        return longeststreak;
    }
};
'''
